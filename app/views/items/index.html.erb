<h1>Listing parts</h1>
<table>
  <tr>
    <th>
      <%= 'Item Name' %>
    </th>
    <th>
      <%= 'Item number' %>
    </th>
    <th>
      <%= 'Action' %>
    </th>
    
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td>
        <%= item.name %>
      </td>
      <td>
        <%= item.number %>
      </td>
      <td>

        <%= link_to 'Show', item %>      
        <%= link_to '| Edit', edit_item_path(item) %>     
        <%= link_to '| Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }  %>
        
      </td>
    </tr>
  <% end %>
</table>
<br/>
<%= link_to 'New Part', new_item_path %>
<%= link_to 'back', root_path %>
